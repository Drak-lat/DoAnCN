<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF8F3">

    <!-- Content với ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Error message -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/error_bg"
                android:textColor="#C62828"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- ✅ THÊM: Hero Section (Sách nổi bật) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:background="#FAF8F3"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#FAF8F3">


                    <!-- Mô tả bên trái -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="16dp">

                        <TextView
                            android:id="@+id/tvHeroTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Life Of The Wild"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#111"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvHeroDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eu feugiat nisl, libero ipsum enim pharetra hac. Urna commodo, lacus ut magna velit eleifend. Amet, quis urna, a eu."
                            android:textSize="13sp"
                            android:textColor="#666"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="6"
                            android:ellipsize="end"/>

                    </LinearLayout>

                    <!-- Hình ảnh bên phải -->
                    <ImageView
                        android:id="@+id/imgHeroBook"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_book"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Đề cử -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đề Cử"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>

            <!-- Bán chạy nhất -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bán Chạy Nhất"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBestSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>

            <!-- Sản phẩm mới -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản Phẩm Mới"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#111"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>