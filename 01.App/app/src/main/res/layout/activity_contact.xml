<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F6F2">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#6B5B4B"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBackContact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Liên Hệ Hỗ Trợ"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_regular"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Icon & Title -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_support"
                android:tint="#6B5B4B"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Chúng Tôi Luôn Sẵn Sàng Hỗ Trợ Bạn"
                android:textColor="#6B5B4B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="Gửi thông tin của bạn, chúng tôi sẽ phản hồi sớm nhất"
                android:textColor="#666"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/quicksand_regular"/>

            <!-- Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:radius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Name Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/edtContactName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_bg"
                        android:hint="Nhập họ tên của bạn"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="#222"
                        android:textSize="15sp"
                        android:fontFamily="@font/quicksand_regular"
                        android:inputType="textPersonName"
                        android:layout_marginBottom="16dp"/>

                    <!-- Phone Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/edtContactPhone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_bg"
                        android:hint="Nhập số điện thoại"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="#222"
                        android:textSize="15sp"
                        android:fontFamily="@font/quicksand_regular"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:layout_marginBottom="16dp"/>

                    <!-- Message Input -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nội dung"
                        android:textColor="#333"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/edtContactMessage"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/input_bg"
                        android:hint="Nhập nội dung cần hỗ trợ (tối thiểu 10 ký tự)"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="12dp"
                        android:textColor="#222"
                        android:textSize="15sp"
                        android:fontFamily="@font/quicksand_regular"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:maxLength="500"
                        android:layout_marginBottom="20dp"/>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressBarContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"/>

                    <!-- Send Button -->
                    <Button
                        android:id="@+id/btnSendContact"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/btn_login_bg"
                        android:text="Gửi Liên Hệ"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/quicksand_regular"
                        android:layout_marginBottom="12dp"/>

                    <!-- Result Message -->
                    <TextView
                        android:id="@+id/tvContactResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/quicksand_regular"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>